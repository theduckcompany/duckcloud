<div class="container">
  <div class="jumbotron">
    <form action="/auth/authorize" method="POST">
      <h1>Authorize</h1>
      <h2>You are connected as {{ .username }}</h2>
      <p>The client would like to perform following actions on your behalf.</p>
      <p>
      <ul>
      {{ range $val := .scope }}
        <li>{{ $val }}</li>
      {{ end }}
      </ul>
        <button type="submit" class="btn btn-primary btn-lg">
          Allow
        </button>
      </p>
    </form>
  </div>
</div>
